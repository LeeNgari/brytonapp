      "required": true
    },
    "Department": {
      "type": "string"
    },
    "Email": {
      "type": "email"
    },
    "Phone": {
      "type": "string"
    },
    "Address": {
      "type": "text"
    },
    "quotations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quotation.quotation",
      "mappedBy": "customer"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "customer"
    },
    "work_sheets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::work-sheet.work-sheet",
      "mappedBy": "customer"
    }
